<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pledges_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_image" />


        <TextView
            android:id="@+id/pledges_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/pledges_image"
            android:fontFamily="@font/montserrat"
            android:inputType="textMultiLine"
            android:text="User Name"
            android:layout_centerHorizontal="true"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
            android:id="@+id/participants_pledge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pledges_name"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/pledges_image"
            android:fontFamily="@font/montserrat"
            android:layout_centerHorizontal="true"
            android:inputType="textMultiLine"
            android:text="Ksh: "
            android:textAlignment="textStart"
            android:textColor="@color/error"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>

        <TextView
            android:id="@+id/participants_pledgeAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pledges_name"
            android:layout_toRightOf="@id/participants_pledge"
            android:fontFamily="@font/montserrat"
            android:text="1000"
            android:textColor="@color/myColor1"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>

        <Button
            android:id="@+id/participants_pledges_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_signin_background"
            android:fontFamily="@font/montserrat"
            android:text="DELETE"
            android:textColor="@color/error"/>


    </RelativeLayout>

</RelativeLayout>